          <titles>
            <title>On the propagation of acoustic–gravity waves under elastic ice sheets</title>
          </titles>
          <contributors>
            <person_name sequence="first" contributor_role="author">
              <given_name>Ali</given_name>
              <surname>Abdolali</surname>
              <ORCID>http://orcid.org/0000-0003-3946-1552</ORCID>
            </person_name>
